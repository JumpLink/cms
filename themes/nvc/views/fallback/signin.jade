extends layout.jade
block body
  .container
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Sign in to continue
        .account-wall
          img.profile-img(src='/assets/images/members/photo.png', alt='')
          form.form-signin(class=flash && flash.error ?'has-error':'', action="/session/create", method="POST")
            input.form-control(name="email", type='text', placeholder='Email', required='required', autofocus='autofocus')
            input.form-control(name="password", type='password', placeholder='Password', required='required')
            if flash && flash.error
              p.text-danger= flash.error[0].message
            button.btn.btn-lg.btn-primary.btn-block(type='submit')
              | Sign in

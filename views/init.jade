    script(type="text/ng-template", id="bootstrap/imprint/content"): include ./bootstrap/templates/imprint/content.jade
    //- links
    script(type="text/ng-template", id="bootstrap/links/content"): include ./bootstrap/templates/links/content.jade
    //- admin
    script(type="text/ng-template", id="bootstrap/administration/settings"): include ./bootstrap/templates/administration/settings.jade
    script(type="text/ng-template", id="bootstrap/administration/users"): include ./bootstrap/templates/administration/users.jade
    script(type="text/ng-template", id="bootstrap/administration/user"): include ./bootstrap/templates/administration/user.jade
  body(ng-class="bodyclass")
    if force != 'modern'
      noscript
        div(style="padding: 40px 15px;text-align: center;")

.container-fluid(style="min-height: 400px;")
  h1.anchor-static-navbar#gallery
  .page-header
    h1 Galerie
  //- https://github.com/passy/angular-masonry
  div(masonry)
    .masonry-brick(ng-repeat="image in images")
      a(ui-sref="bootstrap-layout.gallery-slider({slideIndex: $index})")
        img(ng-src="{{ image.thumb.path }}", width="100px", alt="A masonry brick")
nav.navbar.navbar-inverse.navbar-fixed-bottom(role="administration", ng-show="$root.authenticated")
  .container
    .navbar-left
      p.navbar-text Admininstration
    form.navbar-from.navbar-right
      button.btn.btn-default.navbar-btn(ng-show="toogleHtml", ng-click="toogleHtml()")
        | HTML
      button.btn.btn-default.navbar-btn(ng-show="save", ng-click="save()")
        i.fa.fa-floppy-o
      button.btn.btn-default.navbar-btn(ui-sref='bootstrap-layout.administration')
        i.fa.fa-cog

    .form-group
      label(for='plz') Postleitzahl
      input#plz.form-control(type='text', placeholder='Postleitzahl eingeben', ng-model="member.plz")
    .form-group
      label(for='plz') Ort
      input#ort.form-control(type='text', placeholder='Ort eingeben', ng-model="member.ort")
    .form-group
      label(for='bankname') Bankname
      input#bankname.form-control(type='text', placeholder='Bankname eingeben', ng-model="member.bank.name")
    .form-group
      label(for='iban') IBAN
      input#iban.form-control(type='text', placeholder='IBAN eingeben', ng-model="member.bank.iban")
    .form-group
      label(for='iban') BIC
      input#iban.form-control(type='text', placeholder='IBAN eingeben', ng-model="member.bank.bic")

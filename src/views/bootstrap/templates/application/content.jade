          i.fa.fa-map-marker
        input#plz.form-control(type='text', name="plz", placeholder='Postleitzahl eingeben', required, ng-model="member.plz")
      span.form-control-feedback(ng-hide="form.plz.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.plz.$error.required", title="Bitte geben Sie hier Ihre Postleitzahl ein."): i.fa.fa-exclamation-triangle
    //-
    //- Wohnort
    //-
    .form-group.has-feedback(ng-class="{'has-error': form.ort.$invalid, 'has-success': form.ort.$valid}")
      label.control-label(for='ort') Wohnort
      .input-group
        .input-group-addon
          i.fa.fa-map-marker
        input#ort.form-control(type='text', name="ort", placeholder='Ort eingeben', required, ng-model="member.ort")
      span.form-control-feedback(ng-hide="form.ort.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.ort.$error.required", title="Bitte geben Sie hier Ihren Wohnort ein."): i.fa.fa-exclamation-triangle
    //-
    //- Bankname
    //-
    .form-group.has-feedback(ng-class="{'has-error': form.bankname.$invalid, 'has-success': form.bankname.$valid}")
      label.control-label(for='bankname') Bankname
      .input-group
        .input-group-addon
          i.fa.fa.fa-university
        input#bankname.form-control(type='text', name="bankname", placeholder='Bankname eingeben', required, ng-model="member.bank.name")
      span.form-control-feedback(ng-hide="form.bankname.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.bankname.$error.required", title="Bitte geben Sie hier Ihren Banknamen ein."): i.fa.fa-exclamation-triangle
    //-
    //- IBAN
    //-
    .form-group.has-feedback(ng-class="{'has-error': form.iban.$invalid, 'has-success': form.iban.$valid}")
      label.control-label(for='iban') IBAN
      .input-group
        .input-group-addon
          i.fa.fa-university
        input#iban.form-control(type='text', name="iban", placeholder='IBAN eingeben', required, ng-model="member.bank.iban")
      span.form-control-feedback(ng-hide="form.iban.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.iban.$error.required", title="Bitte geben Sie hier Ihre IBAN ein."): i.fa.fa-exclamation-triangle
    //-
    //- BIC
    //-
    .form-group.has-feedback(ng-class="{'has-error': form.bic.$invalid, 'has-success': form.bic.$valid}")
      label.control-label(for='bic') BIC
      .input-group
        .input-group-addon
          i.fa.fa-university
        input#bic.form-control(type='text', name="bic", placeholder='BIC eingeben', required, ng-model="member.bank.bic")
      span.form-control-feedback(ng-hide="form.bic.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.bic.$error.required", title="Bitte geben Sie hier Ihre BIC ein."): i.fa.fa-exclamation-triangle
    button.btn.btn-primary(type="submit", ng-disabled="form.$invalid") Absenden
  div(ng-show="$root.authenticated")
    h2 Vorschau (nur für Administratoren sichtbar)
    #odf
      webodfview(data-file="/aufnahmeantrag.odt", data-invoice="member", data-upload="webodf.upload", data-refresh="webodf.refresh", data-ready="webodf.ready", data-download="webodf.download")
nav.navbar.navbar-inverse.navbar-fixed-bottom(role="administration", ng-show="$root.authenticated")
  .container
    .navbar-left
      p.navbar-text Admininstration
    form.navbar-from.navbar-right
      .btn-group
        button.btn.btn-warning.navbar-btn(ng-if="add", title="Hinzufügen", ng-click="add()")
          i.fa.fa-plus
        button.btn.btn-success.navbar-btn(ng-if="download", title="Herunterladen", ng-click="download()")
          i.fa.fa-download
        button.btn.btn-success.navbar-btn(ng-if="refresh", title="Aktualisieren", ng-click="refresh()")
          i.fa.fa-refresh
        button.btn.btn-success.navbar-btn(ng-if="toogleHtml", title="HTML-Modus umschalten", ng-click="toogleHtml()")
          | HTML
        button.btn.btn-primary.navbar-btn(ng-if="save", title="Speichern", ng-click="save()")
          i.fa.fa-floppy-o
      button.btn.btn-default.navbar-btn(title="Einstellungen", bs-dropdown="adminSettingDropdown", ng-click="$event.stopPropagation();", data-template="bootstrap/dropdown", data-placement="top-left", data-html="true")
        i.fa.fa-cog

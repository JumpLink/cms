          i.fa.fa-map-marker
        input#strasse.form-control(type='text', name="strasse", placeholder='Straße eingeben', required, ng-model="member.strasse")
      span.form-control-feedback(ng-hide="form.strasse.$error.required", title="Alles Okay!"): i.fa.fa-check
      span.form-control-feedback(ng-show="form.strasse.$error.required", title="Bitte geben Sie Ihren Straßennamen und Ihre Hausnummer hier ein."): i.fa.fa-exclamation-triangle
    //-
    //- Postleitzahl
    //-
    .form-group.has-feedback(ng-class="{'has-error': form.plz.$invalid, 'has-success': form.plz.$valid}")
      label.control-label(for='plz') Postleitzahl
      .input-group

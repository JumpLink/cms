.container-fluid(style="min-height: 400px;")
  h1.anchor-static-navbar#gallery
  .fullscreen-wrapper(ng-style="aspect(image, 100)", title="{{image.name}}", fullscreen="isFullScreen(image)", ng-click="setFullScreen(image)")
    img.img-responsive(ng-src="{{ image.original.path }}", width="100%", height="100%")
    .fullscreen-info(ng-show="isFullScreen(image)")
      h1.fullscreen-header.container-fluid
        | {{image.name}}
      .fullscreen-footer.container-fluid
        p(ng-bind-html="image.description")
      .fullscreen-close(ng-click="closeFullScreen()", title="Schlie√üen")
        i.fa.fa-close

.navbar.navbar-default.navbar-fixed-top.hidden-print(role='navigation')
  .container
    .navbar-header
      button.btn.btn-primary.navbar-btn.navbar-left.hidden-lg.hidden-md(style="font-size: 14px; margin-left: 15px; margin-right: 15px;")
        i.fa.fa-bars
      a.navbar-brand(href= force != null ? '/bs/legacy/home?force='+force : '/bs/legacy/home')
        img(src="/images/logo_small.svg", style="height: 40px;margin-top:-10px;float:left;padding-right:5px;")
        span.hidden-xs.hidden-md.hidden-lg Nautischer Verein Cuxhaven e.V.
        span.hidden-sm.hidden-md.hidden-lg NVC e.V.
    ul.nav.navbar-nav.navbar-left.visible-md-block.hidden-xs.hidden-sm.visible-lg-block
      li(class= url == "/bs/legacy/home" ? "active" : "")
        a(href= force != null ? '/bs/legacy/home?force='+force : '/bs/legacy/home') Startseite
      li(class= url == "/bs/legacy/members" ? "active" : "")
        a(href= force != null ? '/bs/legacy/members?force='+force : '/bs/legacy/members') Vorstand / Beirat
      li(class= url == "/bs/legacy/events" ? "active" : "")
        a(href= force != null ? '/bs/legacy/events?force='+force : '/bs/legacy/events') Veranstaltungen
      li(class= url == "/bs/legacy/gallery" ? "active" : "")
        a(href= force != null ? '/bs/legacy/gallery?force='+force : '/bs/legacy/gallery') Galerie
      li(class= url == "/bs/legacy/application" ? "active" : "")
        a(href= force != null ? '/bs/legacy/application?force='+force : '/bs/legacy/application') Aufnahmeantrag
      li(class= url == "/bs/legacy/links" ? "active" : "")
        a(href= force != null ? '/bs/legacy/links?force='+force : '/bs/legacy/links') Links
      li(class= url == "/bs/legacy/imprint" ? "active" : "")
        a(href=force != null ? '/bs/legacy/imprint?force='+force : '/bs/legacy/imprint') Impressum
    .navbar-right
